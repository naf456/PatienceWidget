<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_countdown_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transBackground"
    android:orientation="vertical"
    android:padding="8dp"
    android:theme="@style/Theme.AppCompat.Light">

    <TextView
        android:id="@+id/msg_completed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/msg_completed"
        android:textIsSelectable="false"
        android:textSize="18sp"></TextView>

    <TextView
        android:id="@+id/countdown_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/configure_label_hint"
        android:textIsSelectable="false" />

</LinearLayout>
